#!/use/bin/python
#coding=utf-8

import time
import socket
from binascii import hexlify
from atbtools.header import *
from atbtools.computeTools import *
from math import ceil

def printMachineInfo():
    host_name = socket.gethostname() #获得本机host名
    ip_addr = socket.gethostbyname(host_name) #获得某个host的ip地址
    packed_ip_addr = hexlify(socket.inet_aton(ip_addr))
    uppacked_ip_addr = socket.inet_ntoa(packed_ip_addr)
    packed_ip_addr = hexlify(socket.inet_aton(ip_addr))
    print "Host name: %s" % host_name
    print "IP address: %s" % ip_addr
    print "IP address 16: %s" % hexlify(packed_ip_addr)
    print "IP address : %s" % uppacked_ip_addr

if __name__ == "__main__":
    printMachineInfo()                                              
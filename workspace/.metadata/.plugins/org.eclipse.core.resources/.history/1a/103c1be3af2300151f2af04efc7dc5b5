#!/usr/bin/python
#coding=utf-8

from header import *
import random

USER_AGENTS_ALL = ['Windows IE 6', 'Windows IE 7', 'Windows Mozilla', 'Mac Safari', 'Mac FireFox', 'Mac Mozilla',
               'Linux Mozilla', 'Linux Firefox', 'Linux Konqueror']
USER_AGENTS_bad = ['Mac Safari', "Linux Firefox", "Mac FireFox", 'Windows IE 6','Windows IE 7', 'Linux Konqueror']

def openURL(url):
    request = urllib2.Request(url)
    _header = random.choice(USER_AGENTS_ALL)
    print _header
    request.add_header("User-Agent", USER_AGENTS_ALL[0])
    try:
        response = urllib2.urlopen(request)
    except urllib2.URLError, e:
        if hasattr(e,"code"):
            print e.code
        if hasattr(e,"reason"):
            print e.reason
    else:
        print "OK"
    html = response.read()
    return html

if __name__ == "__main__":
